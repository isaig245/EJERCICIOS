#include <stdio.h>

int main() {
    int N, i;

    // 1. Solicitar la cantidad de números
    printf("¿Cuántos números deseas ingresar? ");
    scanf("%d", &N);

    int numeros[N]; // Declarar el arreglo con tamaño N

    // 2. Pedir los números al usuario
    for (i = 0; i < N; i++) {
        printf("Ingresa el número %d: ", i + 1);
        scanf("%d", &numeros[i]);
    }

    // 3. Recorrer el arreglo y verificar divisibilidad
    printf("\nResultados:\n");
    for (i = 0; i < N; i++) {
        if (numeros[i] % 2 == 0 && numeros[i] % 3 == 0) {
            printf("%d es divisible por 2 y por 3.\n", numeros[i]);
        } else if (numeros[i] % 2 == 0) {
            printf("%d es divisible por 2.\n", numeros[i]);
        } else if (numeros[i] % 3 == 0) {
            printf("%d es divisible por 3.\n", numeros[i]);
        } else {
            printf("%d no es divisible ni por 2 ni por 3.\n", numeros[i]);
        }
    }

    return 0;
}
