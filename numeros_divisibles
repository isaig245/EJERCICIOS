#include <stdio.h>
#include <stdlib.h> // Para usar malloc (asignación dinámica de memoria)

void ejercicio1_divisibilidad() {
    int N, i;
    int *arreglo; // Puntero para el arreglo dinámico

    printf("--- Ejercicio 1: Divisibilidad ---\n");
    printf("¿Cuántos números vas a ingresar? (N): ");
    scanf("%d", &N);

    // 1. Asignar memoria para el arreglo (similar a un array de tamaño fijo)
    arreglo = (int *)malloc(N * sizeof(int));
    if (arreglo == NULL) {
        printf("Error de asignación de memoria.\n");
        return;
    }

    // 2. Llenar el arreglo
    for (i = 0; i < N; i++) {
        printf("Ingresa el número %d: ", i + 1);
        scanf("%d", &arreglo[i]);
    }

    printf("\n--- Resultados ---\n");
    // 3. Recorrer y aplicar el criterio
    for (i = 0; i < N; i++) {
        printf("El número %d", arreglo[i]);
        if (arreglo[i] % 2 == 0) {
            printf(": Es divisible por 2.");
        } else if (arreglo[i] % 3 == 0) {
            printf(": Es divisible por 3.");
        } else {
            printf(": No es divisible por 2 ni por 3.");
        }
        printf("\n");
    }

    free(arreglo); // Liberar la memoria
}

// Puedes llamarlo en tu función main:
 int main() { ejercicio1_divisibilidad(); return 0; }
